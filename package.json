{
  "name": "CV",
  "version": "1.0.0",
  "author": "Lucas GIRARD",
  "license": "UNLICENSED",
  "description": "",
  "main": "www/index.php",
  "scripts": {
    "premodule": "rm -rf src/vendors/node_modules/*; mkdir -p src/vendors/node_modules",
    "module": "./module.sh",
    "premoveBuild": "rm -rf www;mkdir -p www",
    "moveBuild": "shopt -s dotglob;for d in src/*; do cp -R \"$d\" \"www/\"; done;",
    "prefixCss": "postcss src/css/*.css -r --use autoprefixer",
    "opti:critical": "critical www/index.html --base www --inline > index.html",
    "ugli:all": "caaf www",
    "sass": "sass --no-source-map src/css/style.scss src/css/style.css",
    "postugli:all": "shopt -s dotglob;for d in src/fonts/*; do cp -R \"$d\" \"www/fonts/\"; done;",
    "htaccess": "shopt -s dotglob;mv www/.htaccess2 www/.htaccess",
    "watch": "livereload \"src\"",
    "build": "npm run moveBuild && npm run htaccess && npm run ugli:all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "caaf": "^1.0.1",
    "critical": "^1.2.2",
    "livereload": "^0.7.0",
    "postcss-cli": "^6.0.0",
    "sass": "^1.77.8",
    "watchy": "^0.9.4"
  },
  "dependencies": {
    "gumshoejs": "^5.1.2",
    "mixitup": "^3.3.2",
    "purecss": "github:pure-css/pure",
    "sweetalert2": "^11.21.0"
  }
}
